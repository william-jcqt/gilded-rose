{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es2017",
        "esModuleInterop": true,
        "strict": true,
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": false,
        "moduleResolution": "Node",
        "rootDir": "./src",
        "outDir": "./build"
    },
    "exclude": [
        "node_modules"
    ]
}