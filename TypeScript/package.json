{
  "name": "gilded-rose-kata",
  "version": "1.0.0",
  "description": "Gilded Rose kata in TypeScript",
  "type": "module",
  "scripts": {
    "start": "nodemon --config nodemon.json src/main.ts",
    "test": "env TS_NODE_PROJECT=\"tsconfig.testing.json\" mocha -r ts-node/register 'tests/**/*.ts'",
    "test2": "nyc mocha"
  },
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/chai": "~3.5.2",
    "@types/mocha": "~2.2.41",
    "@types/node": "~7.0.18",
    "chai": "~4.2.0",
    "mocha": "~8.2.1",
    "nyc": "~15.1.0",
    "rimraf": "~3.0.2",
    "source-map-support": "0.5.19",
    "ts-node": "~9.1.1",
    "typescript": "~4.1.3"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "text"
    ]
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "clear": "^0.1.0",
    "commander": "^8.3.0",
    "figlet": "^1.5.2"
  }
}
